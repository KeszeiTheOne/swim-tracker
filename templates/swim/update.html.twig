{% extends "layout.html.twig" %}

{% block content %}
    {{ form_start(form) }}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><i class="fas fa-swimmer"></i> Úszások</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('show_swim',{id: swim.id}) }}">Vissza</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 offset-md-3">
                        {{ form_label(form.lengthOfPool,"Medence hossza") }}
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            {{ form_widget(form.lengthOfPool) }}
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2">m</span>
                            </div>
                        </div>
                        {{ form_errors(form.lengthOfPool) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row mb-3">
                    <div class="col-md-3 offset-md-3">
                        {{ form_label(form.laps,"Hossz") }}
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            {{ form_widget(form.laps) }}
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2">db</span>
                            </div>
                        </div>
                        {{ form_errors(form.laps) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row mb-3">
                    <div class="col-md-3 offset-md-3">
                        {{ form_label(form.duration,"Idő (perc)") }}
                    </div>
                    <div class="col-md-3">
                        {{ form_widget(form.duration,{type:"text", attr:{class:"timepicker"}}) }}
                        {{ form_errors(form.duration) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row mb-3">
                    <div class="col-md-3 offset-md-3">
                        {{ form_label(form.weightAtTime,"Akkori súly") }}
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            {{ form_widget(form.weightAtTime,{type: "text",attr: {class: "weightMask"}}) }}
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2">kg</span>
                            </div>
                        </div>
                        {{ form_errors(form.weightAtTime) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row mb-3">
                    <div class="col-md-3 offset-md-3">
                        {{ form_label(form.heightAtTime,"Akkori magasság") }}
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            {{ form_widget(form.heightAtTime) }}
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2">cm</span>
                            </div>
                        </div>
                        {{ form_errors(form.heightAtTime) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row mb-3">
                    <div class="col-md-3 offset-md-3">
                        {{ form_label(form.swimAt,"Ekkor úsztál") }}
                    </div>
                    <div class="col-md-3">
                        {{ form_widget(form.swimAt,{ attr:{class: "datetimepicker","data-toggle":"datetimepicker","data-target":".datetimepicker"}}) }}
                        {{ form_errors(form.swimAt) }}
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 offset-md-4">
                    <button type="submit" class="btn btn-block btn-primary">Mentés</button>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}