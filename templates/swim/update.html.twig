{% extends "layout.html.twig" %}

{% block content %}
    {{ form_start(form) }}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><i class="fas fa-swimmer"></i> Úszások</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('show_swim',{id: swim.id}) }}">Vissza</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="row mb-3">
                <div class="col-md-3 offset-md-3">
                    {{ form_label(form.lengthOfPool,"Medence hossza") }}
                </div>
                <div class="col-md-3">
                    {{ form_widget(form.lengthOfPool) }}
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 offset-md-3">
                    {{ form_label(form.laps,"Hossz") }}
                </div>
                <div class="col-md-3">
                    {{ form_widget(form.laps) }}
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 offset-md-3">
                    {{ form_label(form.duration,"Idő (perc)") }}
                </div>
                <div class="col-md-3">
                    {{ form_widget(form.duration) }}
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 offset-md-3">
                    {{ form_label(form.weightAtTime,"Akkori súly") }}
                </div>
                <div class="col-md-3">
                    {{ form_widget(form.weightAtTime) }}
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 offset-md-3">
                    {{ form_label(form.heightAtTime,"Akkori magasság") }}
                </div>
                <div class="col-md-3">
                    {{ form_widget(form.heightAtTime) }}
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 offset-md-4">
                    <button type="submit" class="btn btn-block btn-primary">Mentés</button>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}