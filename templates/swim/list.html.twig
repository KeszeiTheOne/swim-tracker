{% extends "layout.html.twig" %}

{% block content %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><i class="fas fa-swimmer"></i> Úszások</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('add_swim') }}">Hozzáadás</a>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Medence hossza</th>
                <th>Hossz</th>
                <th>Idő (perc)</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for swim in swims %}
                <tr>
                    <td>{{ swim.lengthOfPool }}</td>
                    <td>{{ swim.laps }}</td>
                    <td>{{ swim.duration }}</td>
                    <td><a href="{{ path('show_swim',{"id":swim.id}) }}" class="btn btn-outline-info btn-sm">Megtekintés</a> </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}