{% extends "layout.html.twig" %}

{% form_theme form "form/layout.html.twig" %}

{% block content %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><i class="far fa-user"></i>Profilom</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('fos_user_profile_show') }}">Vissza</a>
            </div>
        </div>
    </div>
    {{ form_start(form, { 'action': path('fos_user_profile_edit') }) }}
    <div class="row">
        <div class="col-md-4 offset-md-4 col-sm-6 offset-sm-3">
            {{ form_row(form.username,{label: "Felhasználó név"}) }}
            {{ form_row(form.email,{label: "E-mail cím",type:"text",attr: {class: "emailMask"}}) }}
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        {{ form_label(form.weight,"Aktuális súly") }}
                    </div>
                    <div class="col-6">
                        <div class="input-group mb-3">
                            {{ form_widget(form.weight,{type: "text",attr: {class: "weightMask"}}) }}
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2">kg</span>
                            </div>
                        </div>
                        {{ form_errors(form.weight) }}
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        {{ form_label(form.height,"Aktuális magasság") }}
                    </div>
                    <div class="col-6">
                        <div class="input-group mb-3">
                            {{ form_widget(form.height,{type: "text",attr: {class: "heightMask"}}) }}
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2">cm</span>
                            </div>
                        </div>
                        {{ form_errors(form.height) }}
                    </div>
                </div>
            </div>
            {{ form_row(form.birthDate,{label: "Születésnap", attr:{class: "dateMask"}}) }}
            {#            {{ form_row(form.birthDate,{label: "Születésnap", attr:{class: "datetimepicker","data-toggle":"datetimepicker","data-target":".datetimepicker"}}) }}#}
            {{ form_row(form.current_password,{label: "Jelszó"}) }}
            <input type="submit" class="btn btn-primary" value="{{ 'profile.edit.submit'|trans({},"FOSUserBundle") }}"/>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}