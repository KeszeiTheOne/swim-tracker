{% extends "layout.html.twig" %}

{% block content %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Profilom</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a type="button" class="btn btn-sm btn-outline-secondary" href="{{ path('fos_user_profile_edit') }}">Szerkesztés</a>
            </div>
        </div>
    </div>
    <div class="fos_user_user_show">
        <p>{{ 'profile.show.username'|trans({},"FOSUserBundle") }}: {{ user.username }}</p>
        <p>{{ 'profile.show.email'|trans({},"FOSUserBundle") }}: {{ user.email }}</p>
        {% if null != user.birthDate %}
            <p>Aktuális súly: {{ user.weight }} kg</p>
            <p>Aktuális magasság: {{ user.height }} cm</p>
            <p>Születésnap: {{ user.birthDate.format("Y.m.d.") }}</p>
        {% endif %}
    </div>
{% endblock %}