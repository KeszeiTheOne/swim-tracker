<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
				  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
	
	<entity name="App\User\Entity\User"
			table="users">
		
		<id name="id" type="integer" column="id">
			<generator strategy="IDENTITY"/>
		</id>

		<field name="weight" column="weight" nullable="true" type="integer"/>
		<field name="height" column="height" type="integer" nullable="true"/>
		<field name="birthDate" column="birth_date" type="date" nullable="true"/>
		
	</entity>
	
</doctrine-mapping>